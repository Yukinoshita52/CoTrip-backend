<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.trip.web.mapper.TripUserMapper">

    <resultMap id="BaseResultMap" type="com.trip.model.entity.TripUser">
            <id property="id" column="id" />
            <result property="tripId" column="trip_id" />
            <result property="userId" column="user_id" />
            <result property="role" column="role" />
            <result property="createTime" column="create_time" />
            <result property="updateTime" column="update_time" />
            <result property="isDeleted" column="is_deleted" />
    </resultMap>

    <sql id="Base_Column_List">
        id,trip_id,user_id,role,create_time,update_time,
        is_deleted
    </sql>
    <select id="getAuthorByTripId" resultType="com.trip.model.vo.AuthorVO">
        SELECT 
            u.id as userId, 
            u.nickname as nickname, 
            u.username,
            COALESCE(gi.url, '') as avatar
        FROM trip_user tu
        INNER JOIN user u ON tu.user_id = u.id 
        LEFT JOIN graph_info gi ON u.id = gi.item_id AND gi.item_type = 1 AND gi.is_deleted = 0
        WHERE tu.trip_id = #{tripId} 
          AND tu.role = 0 
          AND tu.is_deleted = 0 
          AND u.is_deleted = 0
        LIMIT 1
    </select>
</mapper>
