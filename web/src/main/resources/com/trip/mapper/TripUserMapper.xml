<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.trip.web.mapper.TripUserMapper">

    <resultMap id="BaseResultMap" type="com.trip.model.entity.TripUser">
            <id property="id" column="id" />
            <result property="tripId" column="trip_id" />
            <result property="userId" column="user_id" />
            <result property="role" column="role" />
            <result property="createTime" column="create_time" />
            <result property="updateTime" column="update_time" />
            <result property="isDeleted" column="is_deleted" />
    </resultMap>

    <sql id="Base_Column_List">
        id,trip_id,user_id,role,create_time,update_time,
        is_deleted
    </sql>
    <select id="getAuthorByTripId" resultType="com.trip.model.vo.AuthorVO">
        select user.id as userId, user.nickname as nickname, graph_info.url as avatar
        from trip_user
                 join user on trip_user.user_id = "user".id and trip_user.trip_id = #{tripId}
                 join graph_info on graph_info.item_id = user.id and graph_info.item_type = 1
    </select>
</mapper>
