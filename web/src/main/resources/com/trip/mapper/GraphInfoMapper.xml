<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.trip.web.mapper.GraphInfoMapper">

    <resultMap id="BaseResultMap" type="com.trip.model.entity.GraphInfo">
            <id property="id" column="id" />
            <result property="name" column="name" />
            <result property="itemType" column="item_type" />
            <result property="itemId" column="item_id" />
            <result property="url" column="url" />
            <result property="createTime" column="create_time" />
            <result property="updateTime" column="update_time" />
            <result property="isDeleted" column="is_deleted" />
    </resultMap>

    <sql id="Base_Column_List">
        id,name,item_type,item_id,url,create_time,
        update_time,is_deleted
    </sql>

    <select id="getTripImagesByTripId" resultType="java.lang.String">
        select graph_info.url as url
        from graph_info
        where item_type = 2
          and item_id = #{tripId}
    </select>
</mapper>
